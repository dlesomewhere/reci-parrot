<%= form_for(share) do |f| %>
  <% if share.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this share from being saved:</h2>

      <ul>
        <% share.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :recipe_id, value: @share.recipe_id %>

  <div class="form-group row">
    <div class="col-8">
      <%= f.text_field :recipient_email, class: "form-control", type: "email", placeholder: "hank.scorpio@globex.com" %>
    </div>

    <div class="actions">
      <%= f.submit "Share!", class: "btn btn-primary", type: "submit" %>
    </div>
  </div>
<% end %>
