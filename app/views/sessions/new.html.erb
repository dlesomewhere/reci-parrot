<h1>Sign me in!</h1>

<%= form_tag(:login) do %>
  <div class="form-group row">
    <label for="example-password-input" class="col-2 col-form-label">Email</label>
    <div class="col-8">
      <%= text_field_tag :email, nil, class: "form-control", type: "email", placeholder: "hank.scorpio@globex.com" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="example-password-input" class="col-2 col-form-label">Password</label>
    <div class="col-8">
      <%= text_field_tag :password, nil, class: "form-control", type: "password" %>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Login!", class: "btn btn-primary", type: "submit" %>
  </div>
<% end %>

<h2>Use Google</h2>
<%= link_to "Login", "/auth/google_oauth2", id: "sign_in" %>
